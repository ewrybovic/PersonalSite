@page
@model PersonalSite.Pages.ArduinoCommunicatorModel
@{
    ViewData["Title"] = "Arduino Communicator";
}

<h1>Arduino Communicator</h1>

<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-2">User</div>
        <div class="col-4"><input type="text" id="userInput" value="@Model.Username" disabled/></div>
    </div>
    <div class="row">
        <div class="col-2">Message</div>
        <div class="col-4"><input type="text" id="messageInput" disabled/></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="sendButton" value="Send Message"/>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-2">Current temp: </div>
    <div class="col-6">
        <label id="tempText"></label>
    </div>
</div>
<div class="row">
    <div class="col-2">Current humidity: </div>
    <div class="col-6">
        <label id="humidText"></label>
    </div>
</div>
<div class="row">
    <div class="col-2">Current soil moisture: </div>
    <div class="col-6">
        <label id="moistText"></label>
    </div>
</div>

<div class="row">
    <div class="col-6">
        <ul id="messagesList"></ul>
    </div>
</div>

<script type="text/javascript">
    // TODO this needs to change because it's bad
    if ("@Model.IsAuthorized" === "False") {
        document.getElementById("sendButton").className = "NotValid";
    }
    else {
        document.getElementById("sendButton").className = "Valid";
        document.getElementById("messageInput").disabled = false;
    }
</script>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>

